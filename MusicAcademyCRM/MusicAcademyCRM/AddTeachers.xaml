<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             BackgroundColor="Black"
             x:Class="MusicAcademyCRM.AddTeachers">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Clicked="ToolBarItem_Clicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>


        <ContentPage.Content>
            <ScrollView>
            <StackLayout
            Margin="20">
                <Label Text="Name:"
                        TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="nameEntry"
                        Placeholder="New Teacher's Name"
                        Keyboard="Default"
                        BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

                <Label Text="Phone:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="phoneEntry"
                   Placeholder="New Teacher's Phone"
                   Keyboard="Telephone"
                   BackgroundColor="{StaticResource blackColor}"
                   PlaceholderColor="{StaticResource whiteColor}"
                   TextColor="{StaticResource maroonColor}"/>

                <Label Text="Email:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="emailEntry"
                   Placeholder="New Teacher's Email"
                   Keyboard="Email"
                   BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

                <Label Text="Address:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="addressEntry"
                   Placeholder="New Teacher's Address"
                   Keyboard="Default"
                   BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

                <Label Text="City:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="cityEntry"
                   Placeholder="New Teacher's City"
                   Keyboard="Default"
                   BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

                <Label Text="State:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="stateEntry"
                   Placeholder="New Teacher's State"
                   Keyboard="Default"
                  BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

                <Label Text="Zip:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="zipcodeEntry"
                   Placeholder="New Teacher's Zipcode"
                   Keyboard="Default"
                BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

                <!--<Label Text="Phone:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="companyEntry"
                   Placeholder="Company:"
                   Keyboard="Default"
                BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>-->

                <Label Text="LeadSource:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="leadsourceEntry"
                   Placeholder="New Teacher's LeadSource"
                   Keyboard="Default"
               BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

                <Label Text="Notes:"
                    TextColor="{StaticResource maroonColor}"/>
                <Entry x:Name="notesEntry"
                   Placeholder="Extra Notes to include"
                   Keyboard="Default"
                BackgroundColor="{StaticResource blackColor}"
                        PlaceholderColor="{StaticResource whiteColor}"
                        TextColor="{StaticResource maroonColor}"/>

            </StackLayout>
            </ScrollView>
    </ContentPage.Content>
    
</ContentPage>