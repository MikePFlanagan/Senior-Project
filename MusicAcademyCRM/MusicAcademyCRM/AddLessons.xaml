            <ScrollView>
            <StackLayout HorizontalOptions="FillAndExpand">
                <Entry x:Name="teacherEntry"
                       Placeholder="Teacher"
                       Margin="1,-6"
                       Keyboard="Default"
                       BackgroundColor="{StaticResource whiteColor}"
                       PlaceholderColor="{StaticResource blackColor}"
                       TextColor="{StaticResource blackColor}"/>

                
                   
                        <Entry x:Name="studentEntry"
                               Placeholder="Student"
                               Margin="1,-6"
                               Keyboard="Default"
                               BackgroundColor="{StaticResource whiteColor}"
                               PlaceholderColor="{StaticResource blackColor}"
                               TextColor="{StaticResource blackColor}"/>
                        
                <!--<DatePicker x:Name="startTimeEntry"-->
                <Label x:Name="startTimeLabel" 
                       
                       Margin="1,-6"
                       BackgroundColor="{StaticResource whiteColor}"
                       TextColor="{StaticResource blackColor}" Text="StartTime" Opacity="1">
                    <Label.FormattedText>
                        <FormattedString/>
                    </Label.FormattedText>
                </Label>
                <DatePicker DateSelected="DatePicker_DateSelected" 
                            Margin="1,-6"
                            
                            BackgroundColor="{StaticResource whiteColor}"
                            
                            TextColor="{StaticResource blackColor}"/>
                <Label x:Name="MainLable" 
                       
                       Margin="1,-6"
                       BackgroundColor="{StaticResource whiteColor}"
                       TextColor="{StaticResource blackColor}" Text="StartTime">
					<Label.FormattedText>
						<FormattedString/>
					</Label.FormattedText>
                </Label>

               
                    <!--Margin="1,-6"
                      
                       BackgroundColor="{StaticResource whiteColor}"
                       
                       TextColor="{StaticResource blackColor}"/>-->


                <Entry x:Name="endTimeEntry"
                   Placeholder="EndTime"
                   Margin="1,-6"
                   Keyboard="Default"
                   BackgroundColor="{StaticResource whiteColor}"
                   PlaceholderColor="{StaticResource blackColor}"
                   TextColor="{StaticResource blackColor}"/>
                <Entry x:Name="instrumentEntry"
                   Placeholder="Instrument"
                   Margin="1,-6"
                   Keyboard="Default"
                   BackgroundColor="{StaticResource whiteColor}"
                   PlaceholderColor="{StaticResource blackColor}"
                   TextColor="{StaticResource blackColor}"/>

                <Entry x:Name="roomEntry"
                   Placeholder="Room Number or Online"
                   Margin="1,-6"
                   Keyboard="Default"
                   BackgroundColor="{StaticResource whiteColor}"
                   PlaceholderColor="{StaticResource blackColor}"
                   TextColor="{StaticResource blackColor}"/>
                
                
                <Entry  x:Name="notesEntry"
                    Placeholder="Notes"
                   Margin="1,-6"
                   Keyboard="Default"
                   BackgroundColor="{StaticResource whiteColor}"
                   PlaceholderColor="{StaticResource blackColor}"
                   TextColor="{StaticResource blackColor}"/>


                

